<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mac.demo.mappers.UserMapper">

	<insert id="add" parameterType="com.mac.demo.model.User">
		INSERT INTO user(name,birth,id,pw,phoneNum,email,nickName,gender,city,town,village,manager) VALUES(#{nameMac},#{birthMac},#{idMac},#{pwMac},#{phoneNumMac},#{emailMac},#{nickNameMac},#{genderMac},#{emailMac},#{cityMac},#{townMac},#{villageMac},#{managerMac})
	</insert>

	<select id="getList" resultType="com.mac.demo.model.User">
		SELECT * FROM user
	</select>
	
	<select id="getDetail" resultType="com.mac.demo.model.User">
		SELECT * FROM user WHERE id=#{idMac}
	</select>

	<update id="edit" parameterType="com.mac.demo.model.User">
		UPDATE user SET name=#{nameMac}, birth=#{birthMac}, city=#{cityMac}, town=#{townMac}, village=#{villageMac}, email=#{emailMac}, gender=#{genderMac}, pw=#{pwMac} WHERE id=#{idMac}
	</update>
	
	<delete id="delete" parameterType="com.mac.demo.model.User">
		DELETE FROM user WHERE user=#{user}
	</delete>

</mapper>